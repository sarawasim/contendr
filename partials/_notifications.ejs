            </div>
            <div class="likes-container">
              <p class="likes">
                <%= Object.keys(feedPosts[i]['p1Likes']).length %>
              </p>
              <a href="/<%= feedPosts[i]['postId'] %>/p1/like">
                <% if(feedPosts[i]['p1Likes'][user.email]===true) { %>
                <span style="color: #5377fd">
                  <i class="fas fa-heart"></i>
                </span>
                <% } else { %>
                <span style="color: #5377fd">
                  <i class="far fa-heart"></i>
                </span>
                <% } %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="acceptReject-btns">

      <a href="accept?postId=<%= feedPosts[i]['postId'] %>" id="acceptBtn">Accept</a>
  
      <a href="/<%= feedPosts[i]['postId'] %>/deletePost" id="rejectBtn">Reject</a>
      <% } %>

    </div>
    <script>
      /*Execute a function that will execute an image compare function for each element with the img-comp-overlay class:*/
      initComparisons();
    </script>

  </body>
  <script defer src="/scripts/post.js"></script>
