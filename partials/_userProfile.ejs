<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="css/profile.css" />
    <script src="https://kit.fontawesome.com/761d42c757.js" crossorigin="anonymous"></script>

</head>

<body>
<div class="container-profile">
    <div class="user-profile">
        <div class="circle-crop">
            <img src="../assets/dp-placeholder.png" alt="display picture" id="displayPic-profile">
        </div>
        <div class="userInfo">
            <h1 class="username-profile">
                <%-user.username%>
            </h1>
            <p class="bio">Bio</p>
        </div>
        <div class="settings">
            <i class="fas fa-cog"></i>
        </div>
    </div>

    <div class="userInfo-Profile">
        <div class="followers">
            <p>Followers</p>
            <p class="bold"><%=user.followers.length%></p>
        </div>
        <div class="following">
            <p>Following</p>
            <p class="bold"><%=user.following.length%></p>
        </div>
        <div class="challenges-won">
            <p>Challenges Won</p>
            <p class="bold">111</p>
        </div>
    </div>

    <!-- <%- JSON.stringify(posts) %> -->
    <div class="userPosts-Profile">

        <% let i=0; %> <% for(i=0; i < posts.length; i++) { %>
            <div class="profilePost">
                <img src="<%= posts[i]['p1URL'] %>" id="postImage">
            </div>    
        <% } %>
    </div>
</div>
</body>

</html>