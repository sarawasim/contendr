<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="css/profile.css" />
    <script src="https://kit.fontawesome.com/761d42c757.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="container-profile">
        <div class="user-profile">
            <div class="circle-crop">
                <img src="../assets/dp-placeholder.png" alt="display picture" id="displayPic-profile">
            </div>
            <div class="userInfo">
                <h1 class="username-profile"><%=user.username%></h1>
                <p class="bio">Bio</p>
            </div>
            <div class="follow">
                <%if (!isFollowing) { %><a href="/<%=user.username%>/follow" id="follow-btn">Follow</a>
                <% } else { %> <a href="/<%=user.username%>/unfollow" id="follow-btn">Unfollow</a>
                <% } %>
            </div>
        </div>

        <div class="userInfo-Profile">
            <div class="followers">
                <p>Followers</p>
                <p class="bold"><%= user.followers.length %></p>
            </div>
            <div class="following">
                <p>Following</p>
                <p class="bold"><%= user.following.length %></p>
            </div>
            <div class="challenges-won">
                <p>Challenges Won</p>
                <p class="bold">111</p>
            </div>
        </div>

        <div class="userPosts-Profile">
<% let i=0; %>
    <% for(i=0; i < posts.length; i++) { if (posts[i].player1==user.username) { console.log("*************" +
        posts[i].player1) %>
        <div class="profilePost">
            <img src="<%= posts[i]['p1URL'] %>" id="postImage">
        </div>
        <% } if (posts[i].player2==user.username) { console.log("+++++++++++++" + posts[i].player2)%>
            <div class="profilePost">
                <img src="<%= posts[i]['p2URL'] %>" id="postImage">
            </div>
            <% } }%>
        </div>
    </div>
</body>
<script defer src="/scripts/profile.js"></script>

</html>